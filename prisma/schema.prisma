generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id              Int     @id @default(autoincrement())
  title           String
  publicationYear Int
  authorId        Int     @unique
  available       Boolean
  author          Author  @relation(fields: [authorId], references: [id])
  Loan            Loan[]
}

model Author {
  id   Int    @id @default(autoincrement())
  name String
  Book Book?
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  Loan  Loan[]
}

model Loan {
  id         Int      @id @default(autoincrement())
  bookId     Int
  userId     Int
  loanDate   DateTime @default(now())
  returnDate DateTime
  returned   Boolean
  book       Book     @relation(fields: [bookId], references: [id])
  user       User     @relation(fields: [userId], references: [id])
}
